{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/env.d.ts"
  ],
  "exclude": ["dist", "node_modules", ".astro"]
}
